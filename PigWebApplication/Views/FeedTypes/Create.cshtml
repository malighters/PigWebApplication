@model PigWebApplication.Models.FeedType

@{
    ViewData["Title"] = "Додати раціон харчування";
}

<h1>Додати раціон харчування @ViewBag.FeedmixName</h1>

<h4>Раціон харчування</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BreedId" class="control-label"></label>
                <select asp-for="BreedId" class ="form-control" asp-items="ViewBag.BreedId"></select>
            </div>

            <input type="hidden" value="@ViewBag.FeedmixId" name="FeedmixId" />

            <div class="form-group">
                <label asp-for="AgeStart" class="control-label"></label>
                <input asp-for="AgeStart" class="form-control" />
                <span asp-validation-for="AgeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeFinish" class="control-label"></label>
                <input asp-for="AgeFinish" class="form-control" />
                <span asp-validation-for="AgeFinish" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityPerBig" class="control-label"></label>
                <input asp-for="QuantityPerBig" class="form-control" />
                <span asp-validation-for="QuantityPerBig" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
